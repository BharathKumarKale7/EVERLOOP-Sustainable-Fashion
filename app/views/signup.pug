doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title EVERLOOP - Sustainable Fashion
    link(rel="icon" type="image" href="images/icon.jpg")
    link(rel="stylesheet" href="/signup.css")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=favorite")
  body
    .container
      .signup-container
        img.logo(src="images/icon.jpg" alt="Everloop Logo")
        h2 Create an Account
        form.signup-form(action="/submit" method="POST")
          label(for="name") Full Name
          input#name(type="text" name="name" placeholder="Enter your full name" required)

          label(for="email") Email
          input#email(type="email" name="email" placeholder="Enter your email" required)

          label(for="password") Password
          input#password(type="password" name="password" placeholder="Enter your password" required)

          label(for="confirm-password") Confirm Password
          input#confirm-password(type="password" name="confirm-password" placeholder="Confirm your password" required)

          button.signup-button(type="submit") Sign Up

        p.signup-link Already have an account? 
          a(href="login") Login
