html(lang="en")
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        title EVERLOOP - Sustainable Fashion
        link(rel="icon" type="image" href="images/icon.jpg")
        link(rel="stylesheet" href="/login.css")
        link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=favorite")
    body 
        div.container
            div.login-container
                img.logo(src="images/icon.jpg" alt="Everloop Logo")
                h2 Login to EVERLOOP
                form.login-form(action="/login" method="POST")
                    label(for="email") Email
                    input#email(type="email" name="email" placeholder="Enter your email" required)

                    label(for="password") Password
                    input#password(type="password" name="password" placeholder="Enter your password" required)

                a.forgot-p(href="") Forgot password?
                
                button.login-button(type="submit") Login

                p.login-link Don't have an account? 
                    a(href="signup") Sign Up
